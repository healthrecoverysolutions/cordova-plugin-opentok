<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/imageViewHeader"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentTop="true">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="5dp">

            <ImageButton
                android:id="@+id/swapCamera"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/roundcorner"
                android:scaleType="fitXY"
                android:src="@drawable/ic_switch_camera"
                android:layout_marginRight="10dp"/>

            <ImageButton
                android:id="@+id/toggleVideo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/roundcorner"
                android:scaleType="fitXY"
                android:src="@drawable/ic_video_on"
                android:layout_marginRight="10dp"/>

            <ImageButton
                android:id="@+id/toggleAudio"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/roundcorner"
                android:scaleType="fitXY"
                android:src="@drawable/ic_muted"
                android:layout_marginRight="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/iconsRight"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:padding="5dp">

            <ImageButton
                android:id="@+id/picture_in_picture_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/roundcorner"
                android:scaleType="fitXY"
                android:src="@drawable/ic_minimized"
                android:layout_marginRight="5dp"/>


        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/imageViewFooter"

        android:layout_below="@+id/imageViewHeader">

        <FrameLayout
            android:id="@+id/subscriber_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/container_bg">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@color/black" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/publisher_container"
            android:layout_width="@dimen/publisher_width"
            android:layout_height="@dimen/publisher_height"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/publisher_right_margin"
            android:layout_marginRight="@dimen/publisher_end_margin"
            android:layout_marginBottom="@dimen/publisher_bottom_margin"
            android:background="@color/publisher_border_color"
            android:padding="@dimen/publisher_padding" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/imageViewFooter"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/endCall"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/roundcorner_footerbtn"
            android:padding="1dp"
            android:text="End Call"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>


